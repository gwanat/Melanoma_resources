<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Melanoma_resources</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Melanoma_resources.styles.css" asp-append-version="true" />
</head>
@inject LanguageService language
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MelanomaWebApp</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@language.Getkey("home")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">@language.Getkey("about")</a>
                </li>
            </ul>
        </div>
        <div>
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-dark"  id="navbarDropdown" role="button" data-toggle="button" data-bs-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    <i class="bi bi-globe-americas"></i>
                            @language.Getkey("ch_lang")
                </a>
                <div class="dropdown-menu dropdown-menu-end bg-light text-center" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item text-secondary" style="text-decoration: none;" asp-action="ChangeLanguage" asp-route-culture="en-GB">
                        <i class="flag-icon flag-icon-gb"></i>
                        English (EN)
                    </a>
                    <a class="dropdown-item text-secondary" style="text-decoration: none;" asp-action="ChangeLanguage" asp-route-culture="pl-PL">
                        <i class="flag-icon flag-icon-pl"></i>
                        Polski (PL)
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row d-flex text-center mt-1">
                <div class="col p-2">
                    <p>
                        @language.Getkey("footer_wsiz1") <br />
                        @language.Getkey("footer_wsiz2") <br />
                        @language.Getkey("footer_wsiz3") <br />
                        @language.Getkey("footer_wsiz4")
                    </p>
                </div>
                <div class="col ms-auto p-2">
                    <p>
                        @language.Getkey("footer_hospital1") <br />
                        @language.Getkey("footer_hospital2")<br />
                        @language.Getkey("footer_hospital3")
                    </p>
                </div>
            </div>
        </div>
        <div class="mb-3 ms-lg-3">
            &copy; 2024 - Melanoma_resources
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
